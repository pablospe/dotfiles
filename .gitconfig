[user]
	email = pablo.speciale@gmail.com
	; email = Pablo.Speciale@microsoft.com
	name = Pablo Speciale

[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '

[push]
	default = simple

[diff]
	tool = vimdiff
	colorMoved = default # Git (â‰¥ v2.17, April 2018)able to detect moved blocks of code and style them differently from the usual removed/added lines

[merge]
	tool = vimdiff
	conflictstyle = diff3
; [difftool]
;         prompt = false

[alias]
	patch = !git --no-pager diff --no-color
	d = difftool

[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[credential "https://github.com"]
	helper = !gh auth git-credential

[include]
    path = .delta.gitconfig
